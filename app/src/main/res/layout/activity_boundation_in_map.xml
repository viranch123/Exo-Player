<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoundationInMap.BoundationInMap">

    <fragment
        class="com.google.android.gms.maps.MapFragment"
        android:id="@+id/boundationmapfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="boundation"
        android:onClick="setBounds"
        android:id="@+id/setbounds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="setboudation"
        android:text="Boundationfromcurrentlocation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>